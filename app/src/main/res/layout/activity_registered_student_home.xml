<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisteredStudentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    android:weightSum="5.5"
    android:background="@drawable/back1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo6" />
        <View
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_weight=".10" />

        <!--<com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/lady"/> -->

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome\nAmina Arshad\nReg no:165"
            android:textColor="@color/blue"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/markBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_btn"
                android:text="Mark\nAttendance"
                android:textSize="13sp"
                android:textColor="@color/white" />
            <View
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_weight=".10" />
            <Button
                android:id="@+id/payBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_btn"
                android:text="Pay monthly\nFee"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/notificationBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications\n"
                android:background="@drawable/rounded_btn"
                android:textColor="@color/white"
                android:textSize="13sp"/>
            <View
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_weight=".10" />
            <Button
                android:id="@+id/liveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_btn"
                android:text="View Live\nTracking of van"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/feedbackBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Give\nFeedback"
                android:background="@drawable/rounded_btn"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <View
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_weight=".10" />
            <Button
                android:id="@+id/reportBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_btn"
                android:text="Report any\nProblem"
                android:textSize="13sp"
                android:textColor="@color/white"/>
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/manageProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Manage\nProfile"
                android:background="@drawable/rounded_btn"
                android:textColor="@color/white"
                android:textSize="13sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_weight="0.5" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/logOutBtn"
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:background="@drawable/rounded_btn"
        android:textColor="@color/white"/>


</LinearLayout>